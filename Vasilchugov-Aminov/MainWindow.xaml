<Window x:Class="Vasilchugov_Aminov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vasilchugov_Aminov"
        mc:Ignorable="d"
        Title="Главное окно программы" Height="600" Width="800">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Button ToolTip="Очищает 'Панель" Content="Очистить" HorizontalAlignment="Center" Margin="0,534,0,0" VerticalAlignment="Top" Height="25" Width="740" Click="Button_Click4"/>
        <Menu Margin="30,27,30,505" Visibility="Visible">
            <MenuItem ToolTip="Открывает модули программы" Header="Модули">
                <Separator></Separator>
                <MenuItem ToolTip=" Позволяет присоединиться к базе данных" Header="Присоединение к БД" Click="Baza_dannyx">
                </MenuItem>
                <MenuItem ToolTip=" Позволяет воспроизводить mp3 файлы" Header="Плеер" Click="MenuItem_Click_1">
                </MenuItem>
                <MenuItem ToolTip=" Позволяет выбрать изображение для открытия"  Header="Открыть изображение" Click="buttonOpen_Click">
                </MenuItem>
                <MenuItem ToolTip=" Позволяет добавить текстовый файл "  Header="Добавить текстовый файл" Click="newbutton">
                </MenuItem>
                <MenuItem ToolTip=" Позволяет открыть текстовый файл "  Header="Открыть текстовый файл" Click="newbutton1">
                </MenuItem>
            </MenuItem>
            <MenuItem ToolTip=" Позволяет изменять настройки главного окна" Header="Настройки" Click="Button_Click2">
            </MenuItem>
            <MenuItem ToolTip="Сведения о программе" Header="О программе" Click="Button_Click3">
            </MenuItem>
        </Menu>
        <WrapPanel Margin="30,111,30,79" >
            <ListBox x:Name="kekk" Height="50" Width="383"/>
            <Button Content="" x:Name="buttonOpen" Click="buttonOpen_Click" Width="0"/>
            <Image x:Name="kek"  Height="150" Width="384" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.05"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.332"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <TextBox x:Name="textbox" Height="48" Width="383" TextChanged="textbox_TextChanged"/>
        </WrapPanel>
    </Grid>
</Window>
